<div class="row">
    <div class="col s12">
        <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h2>Воити в магазин</h2>
        <form action="/auth/login" method="POST">
        <div class="input-field">
            <input id="email" name ="email" type="text" class="validate" required> 
            <label for="email">Email</label>
                <span class="helper-text" data-error="Введите email"></span>
        </div>

        <div class="input-field">
            <input id="password" name ="password"  type="text" class="validate" required >
            <label for="password">Пароль</label>
            <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        
    <button class="btn btn-primary" type="submit">Войти</button>
</form>
    </div>
    <div id="register" class="col s6 offset-s3">
        <div id="login" class="col s6 offset-s3">
        <h2>Зарегестрироваться</h2>
        <form action="/auth/register" method="POST">
        <div class="input-field">
            <input id="remail" name ="email" type="text" class="validate" required> 
            <label for="remail">Email</label>
                <span class="helper-text" data-error="Введите email"></span>
        </div>

        <div class="input-field">
            <input id="rpassword" name ="password"  type="text" class="validate" required >
            <label for="rpassword">Пароль</label>
            <span class="helper-text" data-error="Введите пароль"></span>
        </div>
              <div class="input-field">
            <input id="comfirm" name ="password"  type="text" class="validate" required >
            <label for="comfirm">Пароль еще раз </label>
            <span class="helper-text" data-error="Введите пароль еще раз "></span>
        </div>
        
    <button class="btn btn-primary" type="submit">Зарегестрироваться</button>
</form>
    </div>
    </div>